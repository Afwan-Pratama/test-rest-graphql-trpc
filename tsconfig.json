{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src/",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2018",
    "lib": [
      "ESNext.AsyncIterable",
      "ES2018"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
